<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence/orm
                                     https://jakarta.ee/xml/ns/persistence/orm/orm_3_1.xsd"
                 version="3.1">

    <package>app.resume.domain</package>
    <access>FIELD</access>

    <!-- AbstractEntity Mapped Superclass -->
    <mapped-superclass class="AbstractEntity">
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
        </attributes>
    </mapped-superclass>

    <!-- Member Entity -->
    <entity class="app.resume.domain.member.Member">
        <table name="member">
            <unique-constraint name="UK_MEMBER_EMAIL_ADDRESS">
                <column-name>email_address</column-name>
            </unique-constraint>
            <unique-constraint name="UK_MEMBER_DETAIL_ID">
                <column-name>detail_id</column-name>
            </unique-constraint>
        </table>
        <attributes>
            <basic name="nickname">
                <column nullable="false" length="100"/>
            </basic>
            <basic name="passwordHash">
                <column name="password_hash" nullable="false" length="200"/>
            </basic>
            <basic name="status">
                <column nullable="false" length="50"/>
                <enumerated>STRING</enumerated>
            </basic>
            <one-to-one name="detail">
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-one>
            <embedded name="email"/>
        </attributes>
    </entity>

    <!-- MemberDetail.kt의 JPA 애노테이션들을 ORM XML로 변환 -->
    <entity class="app.resume.domain.member.MemberDetail">
        <attributes>
            <basic name="registeredAt">
                <column nullable="false"/>
            </basic>
            <basic name="activatedAt">
                <column nullable="true"/>
            </basic>
            <basic name="deactivatedAt">
                <column nullable="true"/>
            </basic>
        </attributes>
    </entity>

    <!-- Resume Entity -->
    <entity class="app.resume.domain.resume.Resume">
        <attributes>
            <basic name="title">
                <column nullable="false" length="100"/>
            </basic>
            <basic name="name">
                <column nullable="false" length="100"/>
            </basic>
            <basic name="subtitle">
                <column length="150"/>
            </basic>
            <basic name="profileImageUrl">
                <column column-definition="TEXT"/>
            </basic>
            <basic name="bio">
                <column column-definition="TEXT"/>
            </basic>
            <basic name="createdAt">
                <column nullable="false"/>
            </basic>
            <many-to-one name="writer" fetch="LAZY">
                <join-column name="writer_id"/>
            </many-to-one>
            <one-to-many name="workExperiences" fetch="LAZY">
                <join-column name="resume_id"/>
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
            <embedded name="email"/>
            <embedded name="phoneNumber"/>
        </attributes>
    </entity>

    <!-- WorkExperience Entity -->
    <entity class="app.resume.domain.resume.WorkExperience">
        <attributes>
            <basic name="companyName">
                <column nullable="false" length="100"/>
            </basic>
            <basic name="employmentType">
                <column nullable="false" length="20"/>
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="role">
                <column nullable="false" length="50"/>
            </basic>
            <basic name="position">
                <column nullable="false" length="50"/>
            </basic>
            <basic name="achievement">
                <column column-definition="TEXT"/>
            </basic>
            <embedded name="period"/>
        </attributes>
    </entity>

    <!-- Email Embeddable -->
    <embeddable class="app.resume.domain.shared.Email">
        <attributes>
            <basic name="address">
                <column name="email_address" nullable="false" length="150"/>
            </basic>
        </attributes>
    </embeddable>

    <!-- PhoneNumber Embeddable -->
    <embeddable class="app.resume.domain.shared.PhoneNumber">
        <attributes>
            <basic name="callingCode">
                <column name="phone_number_calling_code" nullable="false" length="5"/>
            </basic>
            <basic name="nationalNumber">
                <column name="phone_number_national_number" nullable="false" length="20"/>
            </basic>
        </attributes>
    </embeddable>

    <!-- WorkPeriod Embeddable -->
    <embeddable class="app.resume.domain.resume.Period">
        <attributes>
            <basic name="startedAt">
                <column name="period_started_at" nullable="false" column-definition="VARCHAR(7)"/>
            </basic>
            <basic name="endedAt">
                <column name="period_ended_at" column-definition="VARCHAR(7)"/>
            </basic>
        </attributes>
    </embeddable>

</entity-mappings>